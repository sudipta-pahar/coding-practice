#include <stdio.h>

int main()
{
    int k=1, l=1;
    for(int i=0; i<5; i++){
        l=i+1;
        for(int j=1; j<=i+1; j++){
            if(i%2==0){
                if(j>1){
                printf("*");
                }
                printf("%d", k);  
            }
            else{
                if(j>1){
                printf("*");
                }
                
                printf("%d", (l*(l+1))/2-j+1);
            }
            k++;
        }
            printf("\n");
    }
    return 0;
}
